CC=gcc
SRC=$(wildcard *.c)
OBJ=$(SRC:%.c=%.o)
NAME=school
RM=rm

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^

%.o: %.c
	$(CC) -c -o $@ $<

.PHONY: clean oclean fclean
clean: fclean

oclean:
	$(RM) -f $(OBJ)

fclean: oclean
	$(RM) -f $(NAME)
	$(RM) -f $(wildcard *.swp)
	$(RM) -f $(wildcard *~)

re: clean all
